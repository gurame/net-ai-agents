{
  "name": ".NET 10 Preview",
  "image": "docker.io/gurame/dc-dotnet:10.0-preview",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "postCreateCommand": "bash .devcontainer/setup-certs.sh",
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.aspnet/https,target=/https,type=bind"
  ],
  "remoteEnv": {
    "ASPNETCORE_Kestrel__Certificates__Default__Path": "/https/aspnetapp.pfx",
    "ASPNETCORE_Kestrel__Certificates__Default__Password": "Passw0rd!"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.fontFamily": "MesloLGM Nerd Font",
        "terminal.integrated.fontSize": 15,
        "workbench.iconTheme": "bearded-icons",
        "workbench.colorTheme": "Dracula Theme",
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime"
      ]
    }
  }
}